{{> header}}
{{> menu}}

<div class="container-fluid content">
    <div class="row">
        <div class="col-md-12">
        <h3>Dashboard</h3>
        <p>
            This is the io::record dashboard.
        </p>
        </div>
    </div>
    <div class="row">
      {{#pushNotAvailable}}
        <div class="col-md-6">
          <div class="panel panel-danger">
              <div class="panel-heading">
                  <h3 class="panel-title">Webhooks are not available</h3>
              </div>
              <div class="panel-body">
                  Your sipgate contract does not support Webhooks. Please upgrade to sipgate.io
              </div>
          </div>
        </div>
      {{/pushNotAvailable}}
      {{#configMissing}}
        <div class="col-md-6">
          <div class="panel panel-danger">
              <div class="panel-heading">
                  <h3 class="panel-title">Not configured</h3>
              </div>
              <div class="panel-body">
                  <p>Your sipgate account is not ready to send messages to io::record</p>
                  <a class="btn btn-danger" href="/hooks/record/enable">Activate now</a>
              </div>
          </div>
        </div>
      {{/configMissing}}
        <div class="col-md-6">
          <div class="panel panel-default">
              <div class="panel-heading">
                  <h3 class="panel-title">Account status</h3>
              </div>
              <div class="panel-body">
                  <span class="infolabel">Customer:</span> {{masterSipId}}-{{webuser}}-{{domain}}<br>
                  <span class="infolabel">Balance:</span> <span class="text-success">{{currency}}{{amount}}</span><br>
              </div>
          </div>
        </div>

    </div>
</div>
<link rel="stylesheet" href="/static/prism.css">
<script src="/static/prism.js"></script>
{{> footer}}
