{{> header}}
<link rel="stylesheet" href="/static/bootstrap-social.css">
<div class="container-fluid">
    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h1>io::record <small>call recording</small></h1>
                    <p>This applications automatically records all calls in your sipgate account.
                    </p>
                    <p>
                    If you are not a sipgate user yet get <a href="https://www.sipgatebasic.de/" target="_blank">a free sipgate basic account</a>.
                    </p>
                </div>
                <div class="col-md-8 center-block">
                    <img src="/static/screenshot.png" class="img-responsive">
                </div>
                <div class="row">
                <div class="col-md-12 center-block text-center">
                    <a class="btn btn-social btn-sipgate" href="#" role="button" id="login"><img src="/static/logo.png" class="btn-social-icon"></img> Sign in with sipgate</a>
                </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
<div class="row">
    <div class="col-md-4 center-block text-center feature">
        <i class="ti-microphone"></i>
        Record Calls
    </div>
    <div class="col-md-4 center-block text-center feature">
        <i class="ti-harddrives"></i>
        Archive Calls
    </div>
    <div class="col-md-4 center-block text-center feature">
        <i class="ti-email"></i>
        Get call contents via Mail
    </div>
</div>
<script>

    $('#login').click(() => {
        let url = "https://api.sipgate.com/login/third-party/protocol/openid-connect/auth?scope=all&response_type=code&client_id={{client_id}}&redirect_uri="+encodeURIComponent('{{{redirect}}}')
        document.location.href = url;
    })
</script>
{{> footer}}
